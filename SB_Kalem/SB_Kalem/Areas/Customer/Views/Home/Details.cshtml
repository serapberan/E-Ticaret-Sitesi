@model SB_Kalem.Models.ShoppingCart
@{
    ViewData["Title"] = "Deatils";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <br />
    <div class="row">
        <form method="post">
            <input hidden asp-for="ProductId" />
            <div class="card mb-12">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="@Model.Product.Image" class="img-fluid rounded-start" alt="..." style="height:300px">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-3 text-primary">
                                    Stok
                                </dt>
                                <dd class="col-sm-9">
                                    @if (Model.Product.IsStock)
                                    {
                                        <label class="btn btn-success "><i class="bi bi-check"></i> Var</label>
                                    }
                                    else
                                    {
                                        <label class="btn btn-danger"><i class="bi bi-x"></i> Yok</label>
                                    }
                                </dd>
                                <dt class="col-sm-3">
                                    Başlık
                                </dt>
                                <dd class="col-sm-9">
                                    @Model.Product.Title
                                </dd>
                                <dt class="col-sm-3">
                                    Açıklama
                                </dt>
                                <dd class="col-sm-9">
                                    @Model.Product.Description
                                </dd>
                                <dt class="col-sm-3">
                                    Fiyat
                                </dt>
                                <dd class="col-sm-9">
                                    @Model.Product.Price.ToString("0.00")₺
                                </dd>
                                <dt class="col-sm-3">
                                    Adet
                                </dt>
                                <dd class="col-sm-9">
                                    <input asp-for="Count" class="form-control" />
                                </dd>
                            </dl>

                        </div>
                    </div>

                    <br />
                    <div class="col-md-1">

                    </div>
                    <div class="col-md-3">
                        <a asp-action="Index" asp-controller="Home" class="btn btn-primary form-control"><i class="bi bi-house-fill"></i> Anasayfa</a>
                    </div>
                    <div class="col-md-4">
                        @if (Model.Product.IsStock)
                        {
                            <button type="submit" class="btn btn-success form-control "><i class="bi bi-cart-check-fill"></i> Sepete Ekle</button>
                        }
                        else
                        {
                            <label class="btn btn-danger form-control"><i class="bi bi-cart-x-fill"></i> Ürün Tükenmiştir</label>
                        }
                    </div>
                    <div class="col-md-3">

                    </div>

                </div>
            </div>
        </form>
    </div>
</div>

